#define ($_body)

    #parse("fragments/jquery")

    #set($isHidden = "hidden")
    #if ($error)
        #set($isHidden = "not-hidden")
    #end

<div class="mt3 px3 lg-px4" id="user-error" $!isHidden>
    <div class="alert alert-danger px4">
        $!error<br>
    </div>
</div>

<form method="post" action="$_authUrl">

    <h1 class="mt0 center">
        #message("${_templatePrefix}.view.title")
    </h1>

    <label for="login_hint_token" class="$!_errorClass">#message("${_templatePrefix}.view.token")</label>
    <input type="text" id="login_hint_token" name="login_hint_token" class="block full-width mb1 field-light $!_errorClass"
           autocapitalize="none"
           required
           autofocus>

    <button type="submit" class="button button-fullwidth button-primary">#message("${_templatePrefix}.view.submit")</button>
</form>
#end

#parse("layouts/default")
